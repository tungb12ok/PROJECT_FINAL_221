@page
@model WEB.Pages.UserManager.ManagerProduct.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="Product.DatePosted" class="control-label"></label>
                <input readonly asp-for="Product.DatePosted" class="form-control" />
                <span asp-validation-for="Product.DatePosted" class="text-danger"></span>
            </div> *@
            <div class="form-group">
                <label asp-for="Product.Status" class="control-label"></label>
                <select asp-for="Product.Status" class="form-control" asp-items="ViewBag.StatusId"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Image URLs</label>
                <div id="imageUrls">
                    <input type="text" asp-for="ImageUrls" class="form-control mb-2" />
                </div>
                <button type="button" class="btn btn-primary" onclick="addImageUrl()">Add Image URL</button>
            </div>

            <script>
                function addImageUrl() {
                    var input = document.createElement('input');
                    input.type = 'text';
                    input.name = 'ImageUrls';
                    input.className = 'form-control mb-2';
                    document.getElementById('imageUrls').appendChild(input);
                }
            </script>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
